<section id="admins" class="section">
    <div class="container">
        <div class="row g-4 justify-content-center align-items-center">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Search Results</h5>

                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">ID</th>
                                    <th scope="col">Rank</th>
                                    <th scope="col">Name</th>
                                    <th scope="col">College</th>
                                    <th scope="col">Pool</th>
                                    <th scope="col">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each candidates}}
                                <tr id="row-{{this._id}}">
                                    <th scope="row">{{add @index 1}}</th>
                                    <td>{{this.id}}</td>
                                    <td>{{this.rank}}</td>
                                    <td>{{this.name}}</td>
                                    <td>{{this.college}}</td>
                                    <td>{{this.allotment.pool}}</td>
                                    <td>
                                        <a href="/admin/registrations/candidates/view/{{this.id}}" class="btn-ico blue">
                                            <i class="fa-regular fa-pen-to-square"></i>
                                        </a>
                                        <a href="/admin/registrations/add/{{this.id}}" class="btn-ico blue">
                                            <i class="fa-regular fa-file"></i>
                                        </a>
                                    </td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="col-12 col-md-6 col-lg-4">
                <a href="/admin/registrations/candidates/find" class="btn">Go Back</a>
            </div>
        </div>
    </div>
</section>