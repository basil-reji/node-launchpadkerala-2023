<section id="admins" class="section">
    <div class="container">
        <div class="row g-4 justify-content-center align-items-center">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Search Results</h5>

                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">ID</th>
                                    <th scope="col">Name</th>
                                    <th scope="col">Remarks</th>
                                    <th scope="col">Pool</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each registrations}}
                                <tr id="row-{{this._id}}">
                                    <th scope="row">{{add @index 1}}</th>
                                    <td>{{this.id}}</td>
                                    <td>{{this.name}}</td>
                                    <td>{{this.remarks}}</td>
                                    <td>{{this.pool}}</td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="col-12 col-md-6 col-lg-4">
                <a href="/admin/registrations/" class="btn">Go Back</a>
            </div>
        </div>
    </div>
</section>