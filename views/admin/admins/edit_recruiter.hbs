<section class="admins dashboard">
    <div class="row justify-content-center">
        <div class="col-12 col-sm-8 col-md-6 col-lg-4">
            <div class="forms">
                <div class="log_head">
                    <h3>Edit Recruiter</h3>
                </div>
                {{#if message}}<p class="error">{{message}}</p>{{/if}}
                <form action="/admin/admins/recruiters/update/{{admin._id}}" method="post" role="form" class="log-form">
                    <div class="form-group">
                        <input type="text" class="form-control" name="fname" id="fname" placeholder="First Name"
                            value="{{admin.fname}}" required>
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" name="sname" id="sname" placeholder="Surname"
                            value="{{admin.sname}}">
                    </div>
                    <div class="form-group">
                        <input type="email" class="form-control" name="email" id="email" placeholder="Email" required
                            value="{{admin.email}}" disabled>
                    </div>
                    <div class="form-group">
                        <select name="role" id="role" class="form-control form-select" id="role" required>
                            <option value="recruiter" {{#if (compare admin.role "recruiter" )}}selected{{/if}}>Recruiter</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" name="cid" id="cid" placeholder="Custome ID"
                            value="{{admin.recruiter_id}}" required>
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" name="pool" id="pool" placeholder="Pool"
                        value="{{admin.pool}}" required>
                    </div>
                    <div class="form-group">
                        <select name="status" id="status" class="form-control form-select" id="status" required>
                            <option value="active" {{#if (compare admin.status "active" )}}selected{{/if}}>Active
                            </option>
                            <option value="disabled" {{#if (compare admin.status "disabled" )}}selected{{/if}}>Disabled
                            </option>
                            <option value="inactive" {{#if (compare admin.status "inactive" )}}selected{{/if}}>Inactive
                            </option>
                        </select>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn-primary">Update Admin</button>
                        <a href="/admin/admins/recruiters" class="btn">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>